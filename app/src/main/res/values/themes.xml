<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LogoMaker" parent="Theme.Material3.DayNight.NoActionBar">
    <!--  Primary color (used for prominent UI elements like the AppBar, buttons, etc.)  -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <!--  Darker variant of primary color (for containers and status bar)  -->
    <item name="colorPrimaryContainer">@color/white</item>
    <!--  Color for text/icons displayed on the primary color  -->
    <item name="colorOnPrimary">@color/white</item>
    <!--  Secondary color (used for accents and less prominent UI elements)  -->
    <item name="colorSecondary">@color/colorSecondary</item>
    <!--  Secondary container color (lighter background for secondary elements)  -->
    <item name="colorSecondaryContainer">@color/colorSecondaryDark</item>
    <!--  Color for text/icons displayed on secondary colors  -->
    <item name="colorOnSecondary">@color/white</item>
    <!--  Background color (used for the main app background)  -->
    <item name="backgroundColor">@color/backgroundDark</item>
    <!--  Color for text/icons displayed on the background  -->
    <item name="colorOnBackground">@color/colorPrimary</item>
    <!--  Surface color (used for cards, sheets, and other surfaces)  -->
    <item name="colorSurface">@color/colorSecondaryDark</item>
    <!--  Color for text/icons displayed on surfaces  -->
    <item name="colorOnSurface">@color/colorPrimaryDark</item>
    <!--  Status bar color  -->
    <item name="android:statusBarColor">@color/appBarColor</item>
        <item name="fontFamily">@font/robotoserif_regular</item>
    </style>


    <!--  AppBarOverlay to customize AppBar appearance  -->
    <style name="Theme.LogoMaker.AppBarOverlay" parent="Theme.LogoMaker">
        <!--  Override AppBar-specific properties, such as background color  -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/appBarColor</item>
        <item name="colorSurfaceVariant">@color/appBarColor</item>
        <item name="colorSurfaceContainer">@color/colorPrimary</item>
        <item name="fontFamily">@font/robotoserif_regular</item>
        <!--  Customize other app bar properties like elevation, if needed  -->
    </style>
    <style name="Theme.LogoMaker.NoActionBar" parent="Theme.LogoMaker">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/robotoserif_regular</item>
    </style>
    <style name="Theme.LogoMaker.FullScreen" parent="Theme.LogoMaker">
        <!--  Fullscreen configuration  -->
        <!--  No ActionBar  -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--  Full-screen layout  -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/appBarColor</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLightStatusBar">true </item>
        <item name="fontFamily">@font/robotoserif_regular</item>
        <!--  Set to false for light content on dark status bar  -->
    </style>
    <style name="FullScreenDialogTheme" parent="Theme.LogoMaker.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLightStatusBar">true </item>
        <item name="fontFamily">@font/robotoserif_regular</item>
    </style>

    <style name="AppTheme.SeekBar" parent="@style/Theme.LogoMaker">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="fontFamily">@font/robotoserif_regular</item>
    </style>
    <style name="DialogAnimation_">
        <item name="android:windowEnterAnimation">@anim/up_slide</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide</item>
    </style>
    <style name="MyDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="fontFamily">@font/robotoserif_regular</item>
    </style>
    <style name="MySeekBar" parent="@style/Widget.AppCompat.SeekBar"/>
