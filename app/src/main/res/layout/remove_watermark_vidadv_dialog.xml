<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white1">

        <TextView
            android:id="@+id/headertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5.0dip"
            android:text="@string/remove_watermark"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/remove_watermark_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10.0dip"
        android:gravity="center"
        android:text="@string/remove_watermark_vid_msg"
        android:textColor="@color/colorPrimary"
        android:textSize="18.0sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/no_thanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_weight="1.0"
            android:backgroundTint="@color/white"
            android:paddingBottom="2.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/no1"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15.0sp" />

        <Button
            android:id="@+id/watch_ad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_weight="1.0"
            android:backgroundTint="@color/white"
            android:paddingBottom="2.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/watch_ad"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15.0sp" />
    </LinearLayout>
</LinearLayout>