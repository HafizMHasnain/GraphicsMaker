<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:background="@drawable/card_bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5.0dip"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/white" />

    <TextView
        android:id="@+id/txt_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17.0sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5.0dip"
        android:gravity="center_horizontal"
        android:text="@string/or"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17.0sp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip">

        <LinearLayout
            android:id="@+id/lay_Size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_icon"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:backgroundTint="@color/white"
                android:gravity="center|left"
                android:padding="5.0dip"
                android:text="@string/sizeIcon"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/btn_thumb"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="10.0dip"
                android:backgroundTint="@color/white"
                android:gravity="center|left"
                android:padding="5.0dip"
                android:text="@string/sizeThumb"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="10.0dip"
                android:backgroundTint="@color/white"
                android:gravity="center|left"
                android:padding="5.0dip"
                android:text="@string/size3"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/btn_card"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:backgroundTint="@color/white"
                android:gravity="center|left"
                android:padding="5.0dip"
                android:visibility="gone"
                android:text="@string/sizeCard"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/btn_poster"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:backgroundTint="@color/white"
                android:gravity="center|left"
                android:padding="5.0dip"
                android:visibility="gone"
                android:text="@string/sizePoster"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <RelativeLayout
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10.0dip"
                    android:background="@color/white"
                    android:padding="5.0dip"
                    android:text="@string/size2"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <ImageView
                    android:id="@+id/lock2"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lockimg"
                    tools:visibility="visible"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5.0dip"
                    android:text="@string/size1"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <ImageView
                    android:id="@+id/lock1"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lockimg"
                    tools:visibility="visible"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5.0dip"
                    android:text="@string/size15"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btn_size"
                    android:layout_toEndOf="@+id/txtCustom"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/txt_size1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColorHighlight="@color/black"
                            android:hint="@string/sizeCutom"
                            android:inputType="number"
                            android:maxLength="4"
                            android:text=""
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:textSize="18.0sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtX"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/black"
                            android:textSize="18.0sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txt_size2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="18.0sp" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/lock3"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btn_size"
                    android:src="@drawable/lockimg"
                    tools:visibility="visible"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_size"
                    android:layout_width="50.0dip"
                    android:layout_height="40.0dip"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/white1"
                    android:gravity="center"
                    android:padding="5.0dip"
                    android:text="@string/ok"
                    android:textColor="@color/black"
                    android:textSize="18.0sp" />

                <Button
                    android:id="@+id/btn_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white1"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_bestSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="1.0dip"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:padding="5.0dip"
        android:text="@string/bestSize"
        android:textColor="@color/black"
        android:textSize="18.0sp"
        tools:visibility="visible"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="1.0dip"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:padding="5.0dip"
        android:text="@string/ok"
        android:textColor="@color/black"
        android:textSize="18.0sp"
        tools:visibility="visible"
        android:visibility="gone" />
</LinearLayout>